<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="#ffffff"
     >
 <ScrollView   
     android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <LinearLayout
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
     
<LinearLayout
  android:layout_weight="1"
  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
     <LinearLayout        
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"           
            >           
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                ></View>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvGiftDate"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"                  
                    ></TextView>
            <ImageButton
                android:layout_marginLeft="5dp"
                android:id="@+id/imbRemove"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_action_remove"
                android:background="@drawable/image_button_states"
                ></ImageButton>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutLocation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"            
            android:focusable="false"
            android:background="@drawable/image_button_states"    
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:focusable="false"
                >          
                <ImageButton
                android:gravity="center_vertical"
                android:id="@+id/imbLocation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                  android:background="@drawable/image_button_states" 
                android:src="@drawable/ic_action_place"                
                android:focusable="false"
               />
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="16sp"
                android:text="Address of gift"
                android:textColor="@android:color/black"
                android:focusable="false"
                    ></TextView>
                </LinearLayout> 
         
        </LinearLayout>
         <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/layoutMap"
      >   
      <fragment 
          android:id="@+id/map"
          android:layout_width="match_parent"
          android:layout_height="200dp"          
          android:name="com.google.android.gms.maps.SupportMapFragment"/>
  </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >       
        <TextView
        
        android:id="@+id/tvGiftTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gift title"
        android:textSize="20sp"
        android:textStyle="italic"
         />
    </LinearLayout>
   <ImageView
        android:id="@+id/imGiftImage"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_camera"
        
        ></ImageView>
   
     <TextView
         android:layout_marginTop="20dp"
        android:id="@+id/tvGiftText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"           
        android:text="Gift text"
         />
     
  </LinearLayout>
  <LinearLayout
         android:id="@+id/layoutSound"
         android:padding="5dp"
          android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
         >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/musical"
            ></ImageView>
        <TextView 
            android:id="@+id/tvSoundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/imRemoveSound"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_action_remove"
            android:background="@drawable/image_button_states"
            ></ImageButton>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"        
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >          
                <ImageButton
                     android:gravity="center_vertical"
                android:id="@+id/imbTouch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_good"
                android:background="@drawable/image_button_states"
                ></ImageButton>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tvTouchCount"
                    android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="16sp"
                android:text="0"
                android:textColor="@android:color/black"
                    ></TextView>
                </LinearLayout> 
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                ></View>
            <ImageButton
                android:id="@+id/imbChain"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_action_reply"
                android:background="@drawable/image_button_states"
                ></ImageButton>
        </LinearLayout>
       
    </RelativeLayout>
   </LinearLayout>
   </ScrollView>
</LinearLayout>